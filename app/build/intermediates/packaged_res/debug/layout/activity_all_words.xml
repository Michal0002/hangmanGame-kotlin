<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBBBB"
    tools:context=".AllWordsActivity">

    <Button
        android:id="@+id/button_back"
        android:layout_width="189dp"
        android:layout_height="49dp"
        android:width="316dp"
        android:height="88dp"
        android:backgroundTint="#6E6969"
        android:text="Back"
        app:layout_constraintBottom_toTopOf="@+id/listView_AllWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_nameOfWord" />

    <ListView
        android:id="@+id/listView_AllWords"
        android:layout_width="352dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_nameOfWord" />

    <EditText
        android:id="@+id/editTextText_nameOfWord"
        android:layout_width="211dp"
        android:layout_height="67dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="106dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/listView_AllWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>